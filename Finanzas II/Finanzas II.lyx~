addplot [color=blue,domain=2.000001:5] { sqrt(x-2)+3 };
\end_layout

\begin_layout Plain Layout


\backslash
addlegendentry {Carteras de Mínima Varianza};
\end_layout

\begin_layout Plain Layout


\backslash
addplot [black, mark = *] coordinates {( 0,2 )};
\end_layout

