\end_layout

\begin_layout Plain Layout

{ (1/(2*pi*1*1*sqrt(1-0) )*exp(-(1/(2*(1-0)))*(x^2/1 + y^2/1 - 2*0*x*y/(1*1)
  )) };
\end_layout

\begin_layout Plain Layout


\backslash
end{axis}
\end_layout

\begin_layout Plain Layout


