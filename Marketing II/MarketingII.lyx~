			child {  				
\end_layout

\begin_layout Plain Layout

				node[end, label=right:{$Producto_{4}$}] {}					 				 			 			
\end_layout

\begin_layout Plain Layout

			}		
\end_layout

\begin_layout Plain Layout

		} 		
\end_layout

\begin_layout Plain Layout

	child { 			
\end_layout

\begin_layout Plain Layout

		node[bag]{$Opción_{1}$} 			
\end_layout

\begin_layout Plain Layout

			child { 				
\end_layout

\begin_layout Plain Layout

				node[end, label=right:{$Producto_{3}$}] {}	
\end_layout

\begin_layout Plain Layout

			} 			
\end_layout

